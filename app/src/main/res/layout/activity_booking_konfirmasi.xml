<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnKonfirmasiRental"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pelanggan"
                android:background="#EDEDED"
                android:drawableStart="@drawable/pelanggan"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/detailFotoPelanggan"
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/image"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="90dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pelanggan"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/detailNoHpPelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Handphone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobil"
                android:background="#EDEDED"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/mobil"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/detailFotoMobil"
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/image"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="90dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bookingMobil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Mobil"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/bookingKategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori"/>

                    <TextView
                        android:id="@+id/bookingHarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSopir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sopir"
                android:layout_marginTop="16dp"
                android:background="#EDEDED"
                android:drawableStart="@drawable/sopir"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSopir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#EDEDED">

                <ImageView
                    android:id="@+id/detailFotoSopir"
                    android:layout_width="64dp"
                    android:layout_height="56dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/user"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="90dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bookingNamaSopir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Sopir"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/bookingHpSopir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Hp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rental"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/rental"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline"
                android:layout_marginHorizontal="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Tanggal Rental"/>

                <TextView
                    android:id="@+id/bookingTgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Rental"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Mulai Berjalan"/>

                <TextView
                    android:id="@+id/bookingTglMulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Mulai"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Selesai"/>

                <TextView
                    android:id="@+id/bookingTglSelesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Selesai"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Hari"/>

                <TextView
                    android:id="@+id/bookingHari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Hari"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdBiayaSopir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Biaya Sopir"/>

                <TextView
                    android:id="@+id/bookingBiayaSopir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.000000"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Harga Rental"/>

                <TextView
                    android:id="@+id/bookingHargaRental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.000000"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Total Pembayaran"/>

                <TextView
                    android:id="@+id/bookingTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.300000"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pembayaran"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/bayar"
                android:drawableTint="@color/purple_500"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Title"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="16dp"
                android:lineSpacingMultiplier="1.15"
                android:text="Silahkan melakukan pembayaran pada nomor rekening yang tersedia dan melakukan upload bukti pembayaran pada menu Riwayat Rental Mobil"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#00FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Status Pembayaran"/>

                <TextView
                    android:id="@+id/bookingStatusBayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum membayar"
                    android:textSize="15sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="#FA0606"/>
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnKonfirmasiRental"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Booking Mobil Sekarang!"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="@color/teal_200"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@android:drawable/stat_sys_upload"
        android:drawableTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>